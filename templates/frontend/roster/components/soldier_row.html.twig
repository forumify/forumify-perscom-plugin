<div class="flex justify-between items-center w-100">
    <div class="w-5 text-left">
        {% if soldier.rank is not null and soldier.rank.image is not null %}
            <img width="24px" height="24px" src="{{ asset(soldier.rank.image, 'perscom.asset') }}" alt="">
        {% endif %}
    </div>
    <div class="w-40 text-center">
        <span class="hide-phone">
            {% if soldier.rank is not null %}
                {{ soldier.rank.name }}
            {% endif %}
        </span>
        {{ soldier.name }}
    </div>
    <div class="w-35 text-center hide-phone">
        <span class="inline-flex items-center">
            {% if soldier.position is not null %}
                {% if unit is defined and unit.markSupervisorsOnRoster and perscom_unit_is_supervisor(unit, soldier.position) %}
                    <i class="ph-fill ph-star" style="font-size: 14px;"></i>
                {% endif %}
                {{ soldier.position.name }}
            {% endif %}
        </span>
    </div>
    <div class="w-20 text-center">
        {% if soldier.status is not null %}
            {% include '@ForumifyPerscomPlugin/frontend/roster/components/status.html.twig' with {
                status: soldier.status
            } only %}
        {% endif %}
    </div>
</div>
