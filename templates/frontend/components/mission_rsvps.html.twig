<div {{ attributes }}>
    {% for rsvp in this.RSVPs %}
        <div class="mb-2">
            <h5>{{ rsvp.unit.name }}</h5>
            <ul>
                {% for userRsvp in rsvp.users %}
                    {% set user = userRsvp.user %}
                    <li class="flex items-center gap-1">
                        {% if user.rank is not null and user.rank.image is not null %}
                            <img width="24px" height="24px" src="{{ asset(user.rank.image, 'perscom.asset') }}">
                        {% endif %}
                        {{ user.name }}
                        {% if userRsvp.rsvp.going %}
                            <i class="ph ph-check-circle" style="color: green"></i>
                        {% else %}
                            <i class="ph ph-x-circle" style="color: red"></i>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
</div>

{% macro placeholder(props) %}
    <div class="flex justify-center">
        {% include '@Forumify/components/loader.html.twig' %}
    </div>
{% endmacro %}
