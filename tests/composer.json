{
    "require": {
        "forumify/forumify-perscom-plugin": "@dev",
        "forumify/forumify-platform": "1.0.x-dev",
        "symfony/flex": "^2",
        "symfony/runtime": "7.4.*"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^8.0",
        "dg/bypass-finals": "^1.9",
        "phpunit/phpunit": "^11.5",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symfony/debug-bundle": "7.4.*",
        "symfony/stopwatch": "7.4.*",
        "symfony/web-profiler-bundle": "7.4.*",
        "zenstruck/foundry": "2.x-dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": ".."
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload-dev": {
        "psr-4": {
            "PluginTests\\": "Tests/"
        }
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.4.*",
            "endpoint": [
                "https://api.github.com/repos/forumify/flex-recipes/contents/index.json?ref=flex/main",
                "flex://defaults"
            ],
            "docker": false
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "forumify:plugins:refresh": "symfony-cmd",
            "messenger:stop-workers": "symfony-cmd"
        }
    }
}
